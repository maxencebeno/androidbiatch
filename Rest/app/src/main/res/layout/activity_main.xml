<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lp.rest.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficher toutes les villes"
        android:onClick="onAsyncButtonClick"
        android:id="@+id/asyncbutton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_marginTop="107dp"
        android:layout_below="@+id/search_input"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_input"
        android:layout_below="@+id/asyncbutton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:text="Recherchez une ville"
        android:layout_alignEnd="@+id/radioButton2" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom de la ville"
        android:id="@+id/radioButton"
        android:layout_below="@+id/search_input"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code postal"
        android:id="@+id/radioButton2"
        android:checked="false"
        android:layout_alignBottom="@+id/radioButton"
        android:layout_alignEnd="@+id/asyncbutton" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code INSEE"
        android:id="@+id/radioButton3"
        android:checked="false"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code rÃ©gion"
        android:id="@+id/radioButton4"
        android:checked="false"
        android:layout_alignTop="@+id/radioButton3"
        android:layout_alignStart="@+id/radioButton2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rech"
        android:id="@+id/button"
        android:layout_above="@+id/listView"
        android:layout_toEndOf="@+id/asyncbutton"
        android:layout_alignTop="@+id/search_input"
        android:clickable="true"
        android:onClick="onAsyncButtonClick" />
</RelativeLayout>
